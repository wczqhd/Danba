/**index.wxss**/
.slider-wrapper{
  height: 300rpx;
}

.usermotto {
  margin-top: 200px;
}

.item .icon{
  -webkit-box-flex: 0;
  -ms-flex: 0 0 120rpx;
  flex: 0 0 120rpx;
  width: 120rpx;
  padding-right: 40rpx;
}

.cut-spot{
	width: 40rpx;
	height: 40rpx;
	background-color: red;
	position: relative;
	border-radius: 50%;
	left: 110rpx;
	top: 0rpx;
	color: #fff;
	font-size: 30rpx;
	text-align: center;
	line-height: 32rpx;
}
.item .text{
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  line-height: 20px;
  overflow: hidden;
  font-size: 28rpx;
  text-align: left;
}
.item .text .name {
  margin-bottom: 20rpx;
  color: #fff;
}
.item .text .desc {
  color: rgba(245, 27, 27, 0.158);
}
.search-wrapper {
  padding: 10rpx 30rpx;
  position: relative;
}
.search-wrapper .search {
  border-radius: 5px;
  border: 1px solid #fff;
  font-size: 12px;
}
.placeholder {
  font-size: 12px;
  text-align: center;
}
.search-wrapper .icon-search {
  position: absolute;
  right: 40rpx;
  top: 20rpx;
}

.rank .toplist {
  height: 100%;
  overflow: hidden;
}
.hot-list .list-title {
  height: 65px;
  line-height: 65px;
  text-align: center;
  font-size: 14px;
  color: rgba(8, 222, 104, 0.815);
  text-align: center;
  width: 100%;
}
.rank .toplist .item {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  margin: 0 20px;
  padding-top: 20px;
  height: 100px;
}
.rank .toplist .item .icon image {
  width: 200rpx;
  height: 200rpx;
}
.rank .toplist .item .icon {
  -webkit-box-flex: 0;
  -ms-flex: 0 0 100px;
  flex: 0 0 100px;
  width: 100px;
  height: 100px;
  padding-right: 0;
}
.rank .toplist .item .songlist {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  padding: 0 20px;
  height: 100px;
  overflow: hidden;
  background: #fff;
  color: hsla(0, 0%, 100%, 0.295);
  font-size: 12px;
}
.rank .toplist .item .songlist .song {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 26px;
}
.rank .toplist .item .songlist .name {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    color: #fff;
}

.message {
	width: 92%;
	height: auto;
	padding: 0 30rpx;
	position: relative;

}

.time {
	margin: 14rpx 0;
	text-align: center;
}

.time .time-text {
	display: inline-block;
	padding: 6rpx 20rpx 0 20rpx;
	font-size: 24rpx;
	color: #fff;
	line-height: 28rpx;
	border-radius: 4rpx;
	background-color: #dcdcdc;
}

.user .user-text {
	margin: auto 100rpx 8rpx;
	font-size: 30rpx;
	color: #dcdcdc;
	display: block;
}

.avatar {
	width: 72rpx;
	height: 72rpx;
	margin: 0 20rpx 0 0;
	border-radius: 6rpx;
	float: left;
}

.msg {
	display: inline-block;
	padding: 20rpx;
	max-width: calc(85% - 80rpx);
	min-height: 40rpx; 
	font-size: 24rpx;
	/*overflow: hidden;*/
	text-align: left;
	word-break: break-all;
	background-color: #fff;
	border-radius: 26rpx;
	position: relative;
	margin-top: 24rpx;
}

.msg .msg_poprightarrow {
	position: absolute;
	right: -10rpx;
	height: 18rpx;
	width: 18rpx;
	margin-top: -10rpx;
}

.msg .msg_popleftarrow{
	position:absolute;
	left: -14rpx;
	height: 18rpx;
	width: 18rpx;
	margin-top: -10rpx;
}

.msg .msg-text {
	line-height: 40rpx;
	font-size: 32rpx;
	margin: 0;
}

